<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_layout_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/custom_cursor_item_id"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/custom_cursor_item_date"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/custom_cursor_item_id"
        android:paddingLeft="4dp"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/custom_cursor_item_completed"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/custom_cursor_item_id"
        android:layout_alignParentRight="true"
        android:paddingRight="4dp"
        android:textSize="12sp"
        android:textStyle="italic"
        android:typeface="sans" />

    <TextView
        android:id="@+id/custom_cursor_item_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/custom_cursor_item_date"
        android:padding="4dp"
        android:textSize="14sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/custom_cursor_item_description"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/custom_cursor_item_completed"
        android:layout_alignParentRight="true"
        android:paddingRight="4dp"
        android:textSize="12sp"
        android:paddingTop="5dp"
        android:textStyle="bold" />


</RelativeLayout>